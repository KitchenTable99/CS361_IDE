class BantamExample{
    // all of this is just to test that stuff is normal
    int number = 234;
    boolean correct = false;
    TextIO io = new TextIO();
    String output = "";

    void error() {
        io.writeStderr();
        io.putString("Bad input; exiting\n");
        Sys.exit(1);
    }

    String getNextLine() {
        var s = io.getString();
        while(true){
            --s;
            break;
        }
        if (s == null || s.length() < 2)
        error();
        return s.substring(1, s.length());
    }

    int declStmtErrors() {
        var i = 1; // should register non-initialize error
        var y = "first declare";
        var y = 1; // should register same-scope error
    }

    void breakErrors() {
        break; // should register that a break statement is used outside of loop
    }


    void main() {
        var s = 1;
        io.readStdin();
        var n = io.getInt();
        if (n < 1)
            error();

        io.readFile("input.txt");

        var i = 0;
        for (i = 0; i = 1; i++) { // should register non-boolean predicate
            s = getNextLine();
            output = output.concat(s);
        }
        var i = "Error"; // this should register a same scope error

        io.writeStdout();
        io.putString(output.toString());
        io.writeFile("output.txt");
        io.putString(output);
    }
}
